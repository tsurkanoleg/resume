 {{#each itemList}}                            
    <div class="row mb-3 g-2">
        
         <div class="col-3">
            <p>{{number}}</p>
            <p><strong>{{status}}</strong></p>
        </div>
    
        <div class="col-2">
            {{#with amount}}
            <p>{{title}}:</p>
            <p><strong>{{value}}</strong></p>
            {{/with}}
        </div>
                
        <div class="col-5">
            {{#each images}}
            <img src="{{this}}" alt="img" class="me-2">
            {{/each}}
        </div>
               
        <div class="col-2">
            {{#with button}}
            {{#if isPrimary}}
            <a href="{{link}}">
                <button class="btn btn-primary mt-4">
                    {{text}}
                </button>
            </a>
            {{/if}}
            {{/with}}
        </div>

        <div>
            <hr>
        </div>
    </div>    
{{/each}}