<main class="m-3">
    <div>
        {{#with navigation}} 
            <div >
                <div class="card">
                    <div class="card-body">
                        {{#each links}}
                             <a href=" {{href}} "><button class="btn btn-link">{{text}}</button></a>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
    </div>


    <header class="display-5">
        <b>{{header}}</b>
    </header>

   
    <div class=" nav nav-tabs pb-3">
        {{#with  purchase}}
            {{#each tabs}}
                <div class="nav-item col-6 mb-4">
                    {{#if @last}}
                    <a  class="nav-link ">{{this}}</a>
                    {{else}}
                    <a  class="nav-link active">{{this}}</a>
                    {{/if}}
                </div>
            {{/each}}
    
            
            <diw class=" card mb-5">
                {{#with actionBlock}}
                    <div class="col-12  card-body">
                        {{#with input}}
                            <input placeholder="{{placeholder}}" class="form-control mb-2">
                        {{/with}}
                        
                        {{#each buttons}}
                            {{#if isSuccess}}
                                <a href="{{link}}" class="btn btn-success">{{text}}</a>
                            {{/if}}
                            {{#if isOutline}}
                                <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>
                            {{/if}}
                        {{/each}}
                        
                    </div>
                {{/with}}
            </diw>

           {{> purchaseItem}}

        {{/with}}
    </div>

    <div class="card g-3">
        {{#with userInfo}}
            <h3>{{title}}</h3>
            
            <div class="m-3">
                {{#with profileData}}
                    <h4 class="m-3">{{title}}</h4>
                   
                        <div class="card  g-2 ">
                            {{#with fullName}}
                                <div class="card-body row g-2 ">
                                     <table>
                                        <thead>
                                            <tr>
                                                <th class="col-3">{{surname.title}}</th>
                                                <th class="col-3">{{name.title}}</th>
                                                <th class="col-3">{{middleName.title}}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="col-3">{{surname.value}}</td>
                                                <td class="col-3">{{name.value}}</td>
                                                <td class="col-3">{{middleName.value}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>                                
                            {{/with}}
                        </div>

                        <div class="card  g-2">
                            {{#with otherInfo}}
                                <div class="row card-body  g-2 ">
                                    <table>
                                        <thead>
                                            <tr>
                                                <th class="col-3">{{birthday.title}}</th>
                                                <th class="col-3">{{sex.title}}</th>
                                                <th class="col-3">{{language.title}}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="col-3">{{birthday.value}}</td>
                                                <td class="col-3">{{sex.value}}</td>
                                                <td class="col-3">{{language.value}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>                                
                            {{/with}}
                        </div>
                    
                    
                        <div class="card g-2">
                            {{#each ../buttons}}
                                <div class="row  ">
                                    <div >
                                        <div class="card-body col-4">
                                            {{#if isPrimary}}
                                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                            {{/if}}
                                        
                                            {{#if isSecondary}}
                                            <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                                            {{/if}}
                                        
                                            {{#if isDanger}}
                                                <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>
                                            {{/if}}
                                        </div>                                            
                                    </div>
                                </div>                                
                            {{/each}}
                        </div>
                   
                {{/with}}
            </div>

            


        {{/with}}
    </div>
    
    <div class="card my-3 ">
        {{#with  userInfo.recipients}} 
            <h4 class="p-3">{{title}}</h4>

            <div class="row m-3">
                {{#each users}}
                    <div class="card-body col-4">
                        <b>{{name}}</b> <br>
                        {{phone}}<br>
                        {{#with button}}
                            <a href="{{link}}" class="btn btn-primary ">{{text}}</a>
                        {{/with}}
                    </div>

                {{/each}}
            </div>
        {{/with}}
    </div>

    <div class="card p-2 ">
        {{#with  userInfo.contacts}} 
            <h4 class="p-3 ">{{title}}</h4>           
                <div class="row m-3">
                    {{#each contactData}}
                        <div class="card-body col-4 mb-2 ">
                            {{title}}<br>
                            <b>{{value}}</b><br>
                    
                            {{#with button}}
                                <div class="list-item ">
                                    {{#if isPrimary}}
                                        <a href="{{link}}" class="btn btn-primary ">{{text}}</a>
                                    {{/if}}
                                </div>
                                <div class="list-item ">
                                        {{#if isSecondary}}
                                        <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                                        {{/if}}
                                </div>
                                <div class="list-item ">
                                    {{#if isDanger}}
                                        <a href="{{link}}" class="btn btn-outline-danger ">{{text}}</a>
                                    {{/if}}
                                </div>
                            {{/with}}
                    
                        </div>
                    {{/each}}
                </div>          
        {{/with}}
    </div>

    <footer>
        <div class="row  g-1 ">
            {{#each footer}}
                <div class="nav">
                    <div>
                        {{#each this}}
                            {{#if @last}}
                                <a class="nav-link disabled" href="{{link}}">{{text}}</a>
                            {{else}}
                                <a class="nav-link" href="{{link}}">{{text}}</a>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
    </footer>







</main>
