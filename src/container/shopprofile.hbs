<main class="m-3">
    <div>
        {{#with navigation}} 
            <div >
                <div class="card">
                    <div class="card-body">
                        {{#each links}}
                             <a href=" {{href}} "><button class="btn btn-link">{{text}}</button></a>
                        {{/each}}
                    </div>
                </div>
            </div>
        {{/with}}
    </div>


    <header class="display-5"><b>{{header}}</b></header>

    <div class="row">
        <div class=" nav nav-tabs mb-3">
            {{#with  purchase}}
                {{#each tabs}}
                    <div class="nav-item  mb-2">
                        <a  class="nav-link">{{this}}</a>
                    </div>
                {{/each}}
        
                
                {{#with actionBlock}}
    
                    <div class="card col-4">
                        {{#with input}}
                            <input placeholder="{{placeholder}}" class="form-control ">
                        {{/with}}
                    </div>
    
                    <div class="mt-2">
                        {{#each buttons}}
                            {{#if isSuccess}}
                                <a href="{{link}}" class="btn btn-success">{{text}}</a>
                            {{/if}}
                            {{#if isOutline}}
                                <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-outline-danger">{{text}}</a>
                            {{/if}}
                        {{/each}}
                    </div>
                {{/with}} 
    
                {{#each itemList}}                            
                    <div class="card col-12 mb-3">
                        <div class="carg-body ">
                            <div class="col-4 ">
                                {{number}}
                                {{status}}
                            </div>
                            <div class="col-4 ">
                                {{#with amount}}
                                    {{ title}}
                                    {{ value}}
                                {{/with}}
                            </div>

                            <img src="{{images}}">
                            {{#with button}}
                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                {{#if isPrimary}}
                                {{else}}                                    
                                {{/if}}
                            {{/with}}
                        </div>
                    </div>    
                {{/each}}
            {{/with}}
        </div>

        <div >
            {{#with userInfo}}
                <h3>{{title}}</h3>
                
                <div class="card m-3">
                    {{#with profileData}}
                        <h4 class="m-3">{{title}}</h4>
                        <div class="row">
                            {{#with fullName}}
                                <div class="card-body col-4">
                                    <div class="listgroup">
                                        <div class="listgroup-item">
                                            {{#with surname}}
                                                <div >
                                                    {{title}} <br>
                                                    {{value}}
                                                </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body col-4">
                                    <div class="listgroup">
                                        <div class="listgroup-item">
                                            {{#with name}}
                                                <div >
                                                    {{title}} <br>
                                                    {{value}}
                                                </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body col-4">
                                    <div class="listgroup">
                                        <div class="listgroup-item">
                                            {{#with  middleName}}
                                                <div>
                                                    {{title}} <br>
                                                    {{value}}
                                                </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            {{/with}}

                            {{#with  otherInfo}}
                                <div class="card-body col-4">
                                    <div class="listgroup">
                                        <div class="listgroup-item">
                                            {{#with birthday}}
                                                <div >
                                                    {{title}} <br>
                                                    {{value}}
                                                </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body col-4">
                                    <div class="listgroup">
                                        <div class="listgroup-item">
                                            {{#with sex}}
                                                <div >
                                                    {{title}} <br>
                                                    {{value}}
                                                </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body col-4">
                                    <div class="listgroup">
                                        <div class="listgroup-item">
                                            {{#with  language}}
                                                <div>
                                                    {{title}} <br>
                                                    {{value}}
                                                </div>
                                            {{/with}}
                                        </div>
                                    </div>
                                </div>
                            {{/with}}
                       
                        
                            <div >
                                {{#each ../buttons}}
                                    <div class="card-body col-4">
                                        <div class="listgroup ">
                                            <div class="list-item ">
                                                {{#if isPrimary}}
                                                    <a href="{{link}}" class="btn btn-primary ">{{text}}</a>
                                                {{/if}}
                                            </div>

                                            <div class="list-item ">
                                                    {{#if isSecondary}}
                                                    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                                                    {{/if}}
                                            </div>

                                            <div class="list-item ">
                                                {{#if isDanger}}
                                                    <a href="{{link}}" class="btn btn-outline-danger ">{{text}}</a>
                                                {{/if}}
                                            </div>
                                            
                                        </div>
                                    </div>
                                
                                    
                                {{/each}}
                            </div>
                        </div>
                    {{/with}}
                </div>

                <div class="card row">
                    {{#with recipients}} 
                        <h4 class="m-3">{{title}}</h4>

                        <div class="col-5">
                            {{#each users}}
                                <div class="card-body ">
                                    {{name}} <br>
                                    {{phone}}<br>
                                    {{#with button}}
                                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                    {{/with}}
                                </div>

                            {{/each}}
                        </div>
                    
                    {{/with}}
                </div>

                <div class="card p-2 row">
                    {{#with contacts}} 
                        <h4 class="m-3 col-12">{{title}}</h4>
                        <div class="col-4 ">
                            {{#each contactData}}
                                <div class="mb-2">
                                    {{title}}<br>
                                    {{value}}<br>
                                        {{#with button}}
                                            <div class="list-item col-4">
                                                {{#if isPrimary}}
                                                    <a href="{{link}}" class="btn btn-primary ">{{text}}</a>
                                                {{/if}}
                                            </div>
                                            <div class="list-item col-4">
                                                    {{#if isSecondary}}
                                                    <a href="{{link}}" class="btn btn-outline-secondary">{{text}}</a>
                                                    {{/if}}
                                            </div>
                                            <div class="list-item col-4">
                                                {{#if isDanger}}
                                                    <a href="{{link}}" class="btn btn-outline-danger ">{{text}}</a>
                                                {{/if}}
                                            </div>
                                        {{/with}}
                                </div>
                            {{/each}}
                        </div>
                    {{/with}}
                </div>


            {{/with}}
        </div>
    </div>

   <footer>   
        <div class="row p-2">
            {{#each footer}}
                <div class="col-2">
                    {{#each this}}
                        <div class="listgroup">
                            <div class="listgroup-item">                            
                                <a href="{{link}}" class="btn btn-link"> {{text}} </a>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/each}}
        </div>           
    </footer>







</main>