<div class="m-3">
    <main>
        <section>
            <div class="m-3">
                {{> title data= "Mac" big=true}}
                <ul>
                    <li>name:{{name}} </li><br>
                    <li>description:{{description}}</li> <br>
                    <li>price:{{price}}</li> <br>
                    <li>category:{{category}}</li> <br>
                </ul>
            </div>

            <div class="m-3">
                <ul class="m-3">
                    <ul class="m-3">
                        {{#with  features.processor}}
                        <div class="m-3"> Processor </div>
                            <li> brand:{{brand}} </li>
                            <li> model:{{model}} </li>
                            <li> speed:{{speed}} </li>
                            <li> cores:{{cores}} </li>
                            <li> cache:{{cache}} </li>
                        {{/with}}
                    </ul>
                    <hr>
                    <ul class="m-3">
                        {{#with  features.memory}}
                        <div class="m-3">Memory</div>
                            <li> type:{{type}} </li>
                            <li> size:{{size}} </li>
                            <li> speed:{{speed}} </li>
                        {{/with}}
                    </ul>
                    <hr>
                    <ul class="m-3">
                        {{#with  features.storage}}
                        <div class="m-3">Storage</div>
                            <li> type:{{type}} </li>
                            <li> size:{{size}} </li>
                        {{/with}}
                    </ul>
                    <hr>
                     {{#with  features.display}} 
                     <div class="m-3">Display</div>
                        <li> size:{{size}} </li>
                        <li> resolution:{{resolution}} </li>
                        <li> technology:{{technology}} </li>
                        <li> color_space:{{color_space}} </li>
                        <li> brightness:{{brightness}} </li>
                        <li> refresh_rate:{{refresh_rate}} </li>
                    {{/with}}
                    <hr>
                    {{#with  features.graphics}} 
                    <div class="m-3">Graphics</div>
                        <li> brand:{{brand}} </li>
                        <li> model:{{model}} </li>
                        <li> memory:{{memory}} </li>                        
                    {{/with}}
                    <hr>
                   
                        {{#each features.ports}}
                        <div class="m-3">Ports</div>
                            <li> type:{{type}} </li>
                            <li> count:{{count}} </li>
                            <ul class="m-3">
                               
                                
                                

                                {{#each features}}
                                
                                    <li>Feature: {{this}} </li>
                                  
                                {{/each}}
                            </ul>                            
                        {{/each}}
                        <hr>                        
                    </ul>
                    

                    <ul class="m-3">
                        {{#with features.battery}}
                        <div class="m-3"> Battery</div>
                            <li>type: {{type}} </li>
                            <li>capacity: {{capacity}} </li>
                            <li>life: {{life}} </li>
                        {{/with}}
                    </ul>

                    <hr>
                    <p class="m-3">{{weight}}</p> <br>
                    {{#with features.dimensions}} 
                    <div class="m-3">Dimensions</div>
                        <li> height:{{height}} </li>
                        <li> width:{{width}} </li>
                        <li> depth:{{depth}} </li>
                    {{/with}}
                    <hr>

                    <ul class="m-3">
                        {{#with features}}
                        <li>Operating system:{{operating_system}} </li>
                        {{/with}}
                    </ul>
                    
                    

                    <hr>

                    <ul class="m-3">
                        {{#each features.accessories}}
                            <li> name:{{name}} </li>
                            <li> price:{{price}} </li>
                            <hr>
                        {{/each}}
                    </ul>

                </ul>
            </div>

        </section>
    </main>
</div>