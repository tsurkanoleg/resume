<div class="m-4">
    <p>
    <h1>Education</h1>
    </p>

    {{#with main}}
    <main>
        <section  class="m-3">
            {{> title data="My educations" big=true}}

            <ul class="m-3">
                {{#each education}}
                <li>
                    {{name}}
                    {{#if isEnd includeZero=true}} ({{isEnd}}) {{/if}}
                    {{#unless isEnd includeZero=true}} (ще в процесі) {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>

        <section class="m-3">
            {{> title data="My certificates" big=false}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    {{#if id includeZero=true}} ({{id}}) {{/if}}

                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}

</div>