{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-4">

    <main>
        <section class="m-3">
            {{> title data= "My person" big=true}}
            {{#with person}}
            <div>
                <ul class="m-3">
                    <li>{{name}}</li>
                    <li>{{age}}</li>
                    <li>{{gender}}</li>
                </ul>
                <hr>
                <ul class="m-3">
                    {{#with address}}
                    <li>{{street}}</li>
                    <li>{{city}}</li>
                    <li>{{state}}</li>
                    <li>{{zip}}</li>
                    <li>{{country}}</li>
                    {{/with}}
                </ul>
            </div>
            {{/with}}
        </section>
        <hr>
        
        <section>
            <div>
                {{> title data="My education" big=true}}
                <ul class="m-3">
                    {{#each person.education}}
                    <li>{{degree}}</li>
                    <li>{{major}}</li>
                    <li>{{university}}</li>
                    <li>{{graduationYear}}</li>
                    {{/each}}
                </ul>
            </div>
        </section>
        <hr>
        
        <section class="m-3">
            {{> title data="workExperience" big=true}}
            {{#with person}}
            <ul class="m-3">
                {{#each workExperience}}
                <li>{{company}}</li>
                <li>{{title}}</li>
                <li>{{startDate}}</li>
                <li>{{endDate}}</li>
                <hr>
                <div>
                    <ul class="m-3">
                        {{#each responsibilities}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
                <li>{{year_founded}}</li>
                <li>{{industry}}</li>
                <hr>
                <ul class="m-3">
                    {{#each employees}}
                    <li>{{name}}</li>
                    <li>{{position}}</li>
                    <li>{{department}}</li>
                    <hr>
                    <ul class="m-3">
                        {{#each projects}}

                            <li>{{name}}</li>
                            <li>{{description}}</li>
                            <li>{{status}}</li>

                       

                    </ul>
                    <hr>
                    <ul class="m-3">
                        {{#each teams}}
                        <li>{{team_name}}</li>
                        <hr>
                        <ul class="m-3">
                            {{#with team_leader}}
                            <li>{{name}}</li>
                            <li>{{title}}</li>
                            <li>{{email}}</li>
                            {{/with}}
                        </ul>
                        <hr>
                        <ul class="m-3">
                            {{#each team_members}}
                            <li>{{name}}</li>
                            <li>{{title}}</li>
                            <li>{{email}}</li>
                            <li>{{skills}}</li>
                            <hr>
                            <ul class="m-3">
                                {{#each skills}}
                                <li>{{this}}</li>
                                {{/each}}
                            
                                <hr>
                                <div>
                                    <ul class="m-3">
                                        {{#each projects}}
                                            <li>{{name}}</li>
                                            <li>{{description}}</li>
                                            <hr>
                                            <div>
                                                <ul class="m-3">
                                                    {{#each technologies}}
                                                    <li>{{this}}</li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                            <hr>
                                            <div>
                                                <ul class="m-3">
                                                    {{#each team_members}}
                                                    <div class="m-3">
                                                        <li>{{name}}</li>
                                                        <li>{{title}}</li>
                                                    </div>
                                                    {{/each}}
                                                </ul>
                                            </div>                                            
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                        </li>
                        {{/each}}
                    </ul>
                    {{/each}}
                </ul>
                {{/each}}
            </ul>
            {{/each}}
            </ul>
            {{/with}}
        </section>
    </main>
</div>







