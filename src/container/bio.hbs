{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <main class="m-4">
        <section>
            {{> title data= "Bio" big=true}}

            <div>
                <ul>
                    <div class="mb-3">
                        <li>{{name}}</li>
                        <li>{{birthdate}}</li>
                        <li>{{birthplace}}</li>
                        <li>{{deathdate}}</li>
                        <li>{{deathplace}}</li>
                        <li>{{nationality}}</li>
                        <li>{{occupation}}</li>
                    </div>

                    <div>
                        <hr>
                    </div>
                    

                    <ul class="mb-3">
                        {{#each known_for}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </ul>
                    <div>
                        <hr>
                    </div>
                <ul class="mb-3">
                    {{#each education}}
                    <li>{{degree}}</li>
                    <li>{{field}}</li>
                    <li>{{institution}}</li>
                    <li>{{year}}</li>
                    {{/each}}
                </ul>
                
                <ul class="mb-3">
                    {{#each notable_publications}}
                    <li>{{title}}</li>
                    <li>{{year}}</li>
                    <li>{{publisher}}</li>
                    <br>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>
                

                <ul class="mb-3">
                    {{#each partners}}
                    <li> {{name}} </li>
                    <li> {{relationship}} </li>
                    <li> {{years}} </li>
                    <br>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>
               
                <ul class="mb-3"> 
                    {{#each awards}}
                    <li> {{title}} </li>
                    <li> {{year}} </li>
                    <li> {{description}} </li>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>

                <ul class="mb-3">
                    {{#each influences}}
                    <li> {{this}} </li>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>

                <ul  class="mb-3">
                    {{#each influenced}}
                    <li> {{this}} </li>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>

                <ul class="mb-3">
                    {{#each quotes}}
                    <li> {{this}} </li>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>

               <ul  class="mb-3">

                    {{#each major_discoveries}}
                    <li> {{title}} </li>
                    <li> {{year}} </li>
                    <li> {{description}} </li>
                    {{/each}}
                </ul>

                <div>
                    <hr>
                </div>
                
                <ul>
                    {{#with contributions}}
                    <li> {{title}} </li>
                    <li> {{description}} </li>
                    <li> {{year}} </li>
                    <li> {{field}} </li>
                    {{/with}}
                </ul>
            </div>
        </section>
    </main>
</div>







